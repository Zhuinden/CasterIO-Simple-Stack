<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:contentInsetEnd="8dp"
        android:contentInsetLeft="8dp"
        android:contentInsetRight="8dp"
        android:contentInsetStart="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:contentInsetEnd="8dp"
        app:contentInsetLeft="8dp"
        app:contentInsetRight="8dp"
        app:contentInsetStart="8dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/buttonToolbarUp"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|start"
            android:clickable="true"
            android:contentDescription="Go up"
            android:focusable="true"
            app:srcCompat="@drawable/ic_chevron_left_white_24dp"
            tools:ignore="HardcodedText,VectorDrawableCompat"/>

        <TextView
            android:id="@+id/textToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/textColorLight"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Toolbar Text"/>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>
</android.support.constraint.ConstraintLayout>