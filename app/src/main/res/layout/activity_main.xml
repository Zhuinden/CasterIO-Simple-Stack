<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/goToScreenB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Screen B"
        app:layout_constraintBottom_toTopOf="@+id/goToScreenC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/goToScreenC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Screen C"
        app:layout_constraintBottom_toTopOf="@+id/setHistoryD"
        app:layout_constraintTop_toBottomOf="@+id/goToScreenB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/setHistoryD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set History to D"
        app:layout_constraintBottom_toTopOf="@+id/goUpToC"
        app:layout_constraintTop_toBottomOf="@+id/goToScreenC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/goUpToC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Up to C"
        app:layout_constraintBottom_toTopOf="@+id/goUpChainToAB"
        app:layout_constraintTop_toBottomOf="@+id/setHistoryD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/goUpChainToAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Up Chain to A,B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goUpToC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</android.support.constraint.ConstraintLayout>